<article>
	<header>
		<h1>My speeches</h1>
	</header>
	<% @speeches.each do |speech| %>
	<p>
		<h5><%= speech.title %></h5>
		<div><%= speech.body %></div>
		<br />
		<div>Voices: <%= speech.voices %></div>
		<br />
		<td><%= link_to 'Show', speech %></td>
		<td><%= link_to 'Edit', edit_speech_path(speech) if permitted_to? :edit, speech %></td>
		<%= link_to 'Destroy', speech, :confirm => 'Are you sure?', :method => :delete if permitted_to? :destroy, speech %>
		</p>
		<% end %>
	</article>