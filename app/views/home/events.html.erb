<div id='new_events'>
	Загрузка событий... 
</div>

<script type="text/javascript">
	$(function(){
		$.ajax({
			dataType:'jsonp',
			url: "http://www.google.com/calendar/feeds/i1hvc1jnaki2jnrqept2i8sago%40group.calendar.google.com/public/full?futureevents=true&orderby=starttime&sortorder=ascending&max-results=1&alt=json",
			success: function(data) {
				var entry = data.feed.entry[0];
				
				if (entry == undefined) {
						$('#new_events').html('События не найдены');
				}
				
				debugger;
				$('#new_events').html('<article><header><h1>' + entry.title.$t +  '</h1><div class="postmeta"><time datetime="' + entry.gd$when[0].startTime + '">' + new Date(entry.gd$when[0].startTime) + '</time></div><div class="comments">' +entry.gd$where[0].valueString + ' <a href="http://maps.google.com/maps?q=' +entry.gd$where[0].valueString + '">(map)</a></div></header><p><pre>' + entry.content.$t + '</pre></p></article>');
			},
			error: function(err, err2, err3) {
				$('#new_events').html(err2);
			}
		});	
	});
</script>

	