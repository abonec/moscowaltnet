<!DOCTYPE html> 
<html lang="en"> 
<head> 
	<title>Moscow ALT.NET user group website</title>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults, 'jquery-ui.min.js' %>
	<%= csrf_meta_tag %>
	<meta charset="utf-8" /> 
	
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-22176280-1']);
	  _gaq.push(['_setDomainName', 'none']);
	  _gaq.push(['_setAllowLinker', true]);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	
</head> 

<body>
	<div id="container">
		<header role="banner">
			<h1><a href="/">moscow alt.net</a></h1>
		</header>
		<nav>
			<ul>
				<li><a href="/">about</a> |</li>
				<li><a href="/home/events">events</a> |</li>
				<li><a href="/home/news">news</a> |</li>
				<li><a href="/home/speakers">speakers</a> |</li>
				<li><a href="#" onclick="$('#blog').slideToggle(); return false;">search</a></li>
			</ul>
		</nav>
		<div id="blog" class="" style="display: none; ">
			<div id="search" disabled="true">
				<h4>Поиск (пока не работает)</h4>
				<input name="searchbox" id="searchbox" type="text" value="Введите поисковый запрос...">
				<ul class="results" style="display: none; "></ul>
			</div>
		</div>

		<%= yield %>	 
		<hr />
		<div id="disqus_thread"></div>
		<script type="text/javascript">
		    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
		    var disqus_shortname = 'moscowaltnet'; // required: replace example with your forum shortname

		    // The following are highly recommended additional parameters. Remove the slashes in front to use.
		    var disqus_identifier = '<%= params[:controller] + "_" + params[:action] %>';
		    var disqus_url = '<%= request.url %>';

		    /* * * DON'T EDIT BELOW THIS LINE * * */
		    (function() {
		        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
		        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
		        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
		    })();
		</script>
		<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
		<a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>

	</div><!-- container -->

</body>
</html>