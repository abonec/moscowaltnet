<!DOCTYPE html> 
<html lang="en"> 
<head> 
	<title><%= yield :title %> Moscow ALT.NET</title>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults, 'search.js' %>
	<%= csrf_meta_tag %>
	<meta charset="utf-8" /> 
	<link rel="alternate" type="application/rss+xml" title="Moscow ALT.NET events" href="https://www.google.com/calendar/feeds/i1hvc1jnaki2jnrqept2i8sago%40group.calendar.google.com/public/basic"/>
<link rel="SHORTCUT ICON" id="favicon" href="/images/favicon.ico" type="image/ico" />

	<script type="text/javascript">

	var _gaq = _gaq || [];
	_gaq.push(['_setAccount', 'UA-22176280-1']);
	_gaq.push(['_setDomainName', 'none']);
	_gaq.push(['_setAllowLinker', true]);
	_gaq.push(['_trackPageview']);

	(function() {
		var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();

		</script>

	</head> 

	<body>
		<div id="container">
			<header role="banner">
				<h1><a href="/">moscow alt.net</a></h1>
			</header>
			<nav>
				<ul>
					<li><a href="/">about</a> |</li>
					<li><%= link_to "events", :action => "lastevent" %> |</li>
					<li><%= link_to "news", :action => "news" %> |</li>
					<li><%= link_to "speakers", :action => "speakers" %> |</li>
					<li><a href="#" id="searchButton">search</a></li>
				</ul>
			</nav>
			<div id="blog" class="" style="display: none; ">
				<div id="search" disabled="true">
					<h4>Поиск</h4>
					<input name="searchbox" id="searchbox" type="text">
					<ul class="results" id="searchresults" style="display: none;"></ul>
				</div>
			</div>

			<%= yield %>	 
			<hr />
			<div id="disqus_thread"></div>
			<script type="text/javascript">

			$(function(){  
				$("#searchButton").click(function(){
					
					$('#blog').slideToggle(); 
					$('#searchbox').focus();
					
					return false;
				});
			})
</script>


